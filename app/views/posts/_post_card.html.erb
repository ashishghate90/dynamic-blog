<div class="card mb-3" id="post_<%= post.id %>">
  <div class="card-body">
    <h5 class="card-title"><%= link_to post.title, post, class: "text-decoration-none" %></h5>
    <p class="card-text"><%= truncate(post.content, length: 200) %></p>
    <div class="d-flex justify-content-between align-items-center">
      <small class="text-muted">
        By <%= post.user.display_name %> • <%= time_ago_in_words(post.created_at) %> ago
        • <%= pluralize(post.comments.count, 'comment') %>
      </small>
      <% if post.user == current_user %>
        <div>
          <%= link_to "Edit", edit_post_path(post), class: "btn btn-sm btn-outline-primary" %>
          <%= link_to "Delete", post_path(post), method: :delete, 
                      confirm: "Are you sure?", class: "btn btn-sm btn-outline-danger" %>
        </div>
      <% end %>
    </div>
  </div>
</div>