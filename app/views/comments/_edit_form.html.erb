<div class="card mb-3" id="comment_<%= comment.id %>">
  <div class="card-body">
    <h6 class="card-subtitle mb-2 text-muted">Edit Comment</h6>
    <%= form_with(model: [post, comment], local: false, data: { controller: "form" }) do |form| %>
      <% if comment.errors.any? %>
        <div class="alert alert-danger">
          <ul class="mb-0">
            <% comment.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="mb-3">
        <%= form.text_area :content, rows: 3, class: "form-control" %>
      </div>

      <div class="d-flex gap-2">
        <%= form.submit "Update Comment", class: "btn btn-primary btn-sm", 
                        data: { form_target: "submit" } %>
        <%= link_to "Cancel", post_path(post), class: "btn btn-secondary btn-sm" %>
      </div>
    <% end %>
  </div>
</div>