<div class="card mb-3" id="comment_<%= comment.id %>">
  <div class="card-body">
    <div class="d-flex justify-content-between align-items-start">
      <div class="flex-grow-1">
        <h6 class="card-subtitle mb-2 text-muted">
          <%= comment.user.display_name %> â€¢ <%= time_ago_in_words(comment.created_at) %> ago
        </h6>
        <p class="card-text"><%= simple_format(comment.content) %></p>
      </div>
      <% if user_signed_in? && comment.user == current_user %>
        <div class="dropdown">
          <button class="btn btn-sm btn-outline-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown">
            Options
          </button>
          <ul class="dropdown-menu">
            <li>
              <%= link_to "Edit", edit_post_comment_path(comment.post, comment), 
                          class: "dropdown-item", 
                          data: { turbo_method: :get } %>
            </li>
            <li>
              <%= link_to "Delete", post_comment_path(comment.post, comment), 
                          method: :delete, 
                          confirm: "Are you sure?", 
                          class: "dropdown-item text-danger" %>
            </li>
          </ul>
        </div>
      <% end %>
    </div>
  </div>
</div>